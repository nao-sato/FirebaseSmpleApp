<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="view"
            type="com.example.firestoreexample.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#4FFF5722"
        tools:context=".MainActivity">


        <com.example.firestoreexample.GreetView
            android:id="@+id/greet_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/input"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintVertical_weight="0.9"
            tools:listitem="@layout/greet" />

        <LinearLayout
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7AF44336"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/greet_view"
            app:layout_constraintVertical_weight="0.1"
            tools:layout_editor_absoluteX="0dp">

            <ImageView
                android:id="@+id/bt_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:src="@drawable/ic_baseline_update_24" />

            <EditText
                android:id="@+id/set_greet"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="@={view.greet}" />

            <ImageView
                android:id="@+id/bt_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:src="@drawable/ic_baseline_send_24" />
        </LinearLayout>

        <fragment
            android:name="com.example.firestoreexample.EditGreetFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/input" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>